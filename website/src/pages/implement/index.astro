---
import '../../styles/global.css';
import Navbar from '../../components/Navbar.astro';

const cards = [
  {
    title: "Getting Started",
    description: "Build your first NL-conformant system in 30 minutes. A step-by-step guide covering Basic conformance (Levels 1-3).",
    link: "/implement/getting-started",
    icon: "rocket",
    color: "cyan",
    available: true,
  },
  {
    title: "Full Specification",
    description: "The complete 9-chapter technical specification. Covers all 7 levels, wire protocol, conformance, and security model.",
    link: "/spec",
    icon: "doc",
    color: "violet",
    available: true,
  },
  {
    title: "Integration Guides",
    description: "Platform-specific guides for MCP, AWS Lambda, GitHub Actions, and other common deployment targets.",
    link: "#",
    icon: "puzzle",
    color: "green",
    available: false,
  },
  {
    title: "Conformance Testing",
    description: "Test suites and validation tools to verify your implementation meets NL Protocol conformance requirements.",
    link: "#",
    icon: "check",
    color: "amber",
    available: false,
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Implement â€” NL Protocol</title>
    <meta name="description" content="Everything you need to build an NL Protocol-conformant system. Getting started guides, full specification, integration guides, and conformance testing." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen overflow-x-hidden">
    <Navbar current="implement" />

    <main class="pt-20 pb-20">
      <!-- Header -->
      <section class="relative py-16 sm:py-24">
        <div class="absolute -top-40 left-1/4 w-[400px] h-[400px] rounded-full opacity-30 pointer-events-none" style="background: radial-gradient(circle, rgba(0,212,255,0.1) 0%, transparent 70%); filter: blur(80px);"></div>

        <div class="relative z-10 mx-auto max-w-4xl px-4 sm:px-6 text-center">
          <span class="pill mb-6 inline-flex">Build</span>
          <h1 class="text-3xl sm:text-5xl font-extrabold leading-tight tracking-tight mb-5">
            Implement the <span class="gradient-text">Protocol</span>
          </h1>
          <p class="text-lg sm:text-xl text-nl-text-secondary max-w-2xl mx-auto leading-relaxed">
            Everything you need to build an NL Protocol-conformant system.
          </p>
        </div>
      </section>

      <!-- Cards Grid -->
      <section class="mx-auto max-w-5xl px-4 sm:px-6">
        <div class="grid sm:grid-cols-2 gap-6">
          {cards.map((card) => {
            const colorClasses = {
              cyan: { bg: 'bg-nl-cyan/10', text: 'text-nl-cyan', hover: 'hover:border-nl-cyan/30' },
              violet: { bg: 'bg-nl-violet/10', text: 'text-nl-violet', hover: 'hover:border-nl-violet/30' },
              green: { bg: 'bg-nl-green/10', text: 'text-nl-green', hover: 'hover:border-nl-green/30' },
              amber: { bg: 'bg-nl-amber/10', text: 'text-nl-amber', hover: 'hover:border-nl-amber/30' },
            }[card.color];

            const iconSvg = {
              rocket: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.58-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-6.233 0c-1.495 5.093-1.069 6.553-1.069 6.553s1.46.427 6.553-1.069a4.493 4.493 0 000-6.233l9.258-9.258" /></svg>`,
              doc: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" /></svg>`,
              puzzle: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.25 6.087c0-.355.186-.676.401-.959.221-.29.349-.634.349-1.003 0-1.036-1.007-1.875-2.25-1.875s-2.25.84-2.25 1.875c0 .369.128.713.349 1.003.215.283.401.604.401.959v0a.64.64 0 01-.657.643 48.39 48.39 0 01-4.163-.3c.186 1.613.293 3.25.315 4.907a.656.656 0 01-.658.663v0c-.355 0-.676-.186-.959-.401a1.647 1.647 0 00-1.003-.349c-1.036 0-1.875 1.007-1.875 2.25s.84 2.25 1.875 2.25c.369 0 .713-.128 1.003-.349.283-.215.604-.401.959-.401v0c.31 0 .555.26.532.57a48.039 48.039 0 01-.642 5.056c1.518.19 3.058.309 4.616.354a.64.64 0 00.657-.643v0c0-.355-.186-.676-.401-.959a1.647 1.647 0 01-.349-1.003c0-1.035 1.008-1.875 2.25-1.875 1.243 0 2.25.84 2.25 1.875 0 .369-.128.713-.349 1.003-.215.283-.401.604-.401.959v0c0 .333.277.599.61.58a48.1 48.1 0 005.427-.63 48.05 48.05 0 00.582-4.717.532.532 0 00-.533-.57v0c-.355 0-.676.186-.959.401-.29.221-.634.349-1.003.349-1.035 0-1.875-1.007-1.875-2.25s.84-2.25 1.875-2.25c.37 0 .713.128 1.003.349.283.215.604.401.959.401v0a.656.656 0 00.658-.663 48.422 48.422 0 00-.37-5.36c-1.886.342-3.81.574-5.766.689a.578.578 0 01-.61-.58v0z" /></svg>`,
              check: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" /></svg>`,
            }[card.icon];

            return card.available ? (
              <a href={card.link} class={`glass-card shimmer-border p-8 group ${colorClasses.hover} transition-colors`}>
                <div class="flex items-center gap-4 mb-4">
                  <span class={`w-12 h-12 rounded-xl flex items-center justify-center ${colorClasses.bg} ${colorClasses.text}`} set:html={iconSvg} />
                  <h2 class="text-xl font-bold text-nl-text">{card.title}</h2>
                </div>
                <p class="text-sm text-nl-text-secondary leading-relaxed mb-6">
                  {card.description}
                </p>
                <div class="flex items-center justify-between">
                  <span class={`text-xs font-mono ${colorClasses.text} border rounded-full px-3 py-1 bg-transparent`} style={`border-color: currentColor; opacity: 0.4;`}>Available</span>
                  <span class={`${colorClasses.text} group-hover:translate-x-1 transition-transform`}>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                  </span>
                </div>
              </a>
            ) : (
              <div class="glass-card p-8 opacity-60 cursor-default">
                <div class="flex items-center gap-4 mb-4">
                  <span class={`w-12 h-12 rounded-xl flex items-center justify-center ${colorClasses.bg} ${colorClasses.text}`} set:html={iconSvg} />
                  <h2 class="text-xl font-bold text-nl-text">{card.title}</h2>
                </div>
                <p class="text-sm text-nl-text-secondary leading-relaxed mb-6">
                  {card.description}
                </p>
                <div class="flex items-center justify-between">
                  <span class="text-xs font-mono text-nl-text-tertiary border border-nl-border rounded-full px-3 py-1 bg-nl-overlay/50">Coming Soon</span>
                </div>
              </div>
            );
          })}
        </div>

        <!-- Bottom CTA -->
        <div class="mt-16 text-center">
          <p class="text-nl-text-tertiary text-sm mb-4">
            Not sure where to start?
          </p>
          <a href="/implement/getting-started" class="btn-primary">
            Start with the Getting Started Guide
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
          </a>
        </div>
      </section>
    </main>

    <footer class="border-t border-nl-border py-8">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 flex flex-col sm:flex-row items-center justify-between gap-2 text-xs sm:text-sm text-nl-text-tertiary">
        <span>Never-Leak Protocol v1.0</span>
        <span class="inline-flex items-center gap-2">Created by <a href="https://braincol.com" class="inline-flex items-center gap-1.5 text-nl-text-secondary hover:text-nl-text transition-colors"><img src="/braincol-logo.svg" alt="" class="h-4 w-4" />Braincol</a></span>
      </div>
    </footer>
  </body>
</html>
